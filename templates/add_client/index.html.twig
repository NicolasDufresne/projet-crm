{% extends 'base.html.twig' %}

{% block title %}Add Client{% endblock %}

{% block body %}

    <style>
        body {
            background-color: var(--primary-color);
        }
    </style>

    <div class="fix-block-dashboard"></div>

    <div class="block-dashboard">

        <div class="form">

            <div class="form-txt">
                <h1 class="h1-form-dashboard">Ajouter un client</h1>

                {{ form_start(client) }}
                {{ form_row(client.email, {
                    label: 'E-mail'
                }) }}
                {{ form_row(client.name, {
                    label: 'Nom'
                }) }}
                {{ form_row(client.first_name, {
                    label: 'Prénom'
                }) }}
                {{ form_row(client.phonenumber, {
                    label: 'Téléphone'
                }) }}
                {{ form_row(client.adress, {
                    label: 'Adresse'
                }) }}
                {{ form_row(client.CP, {
                    label: 'Code Postal'
                }) }}
                {{ form_row(client.city, {
                    label: 'Ville'
                }) }}
                {{ form_row(client.commitment, {
                    label: 'Engagement'
                }) }}
                {{ form_row(client.compagny) }}
                    <button type="submit" class="btn">Ajouter un client</button>
                    {{ form_end(client) }}
            </div>
        </div>
    </div>
    <div class="clear"></div>
{% endblock %}
