{% extends 'base.html.twig' %}

{% block body %}

    <style>
        body {
            background-color: var(--primary-color);
        }
    </style>


    <div class="fix-block-dashboard"></div>

    <div class="block-dashboard">

        {% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}

        <div class="form">

            <div class="form-txt">
                <h1>Inscrire un utilisateur</h1>

            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.first_name, {
                label: 'Prénom'
            }) }}
            {{ form_row(registrationForm.name, {
                label: 'Nom'
            }) }}
            {{ form_row(registrationForm.email, {
                label: 'E-mail'
            }) }}
            {{ form_row(registrationForm.adress, {
                label: 'Adresse'
            }) }}
            {{ form_row(registrationForm.phonenumber, {
                label: 'Téléphone'
            }) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe'
            }) }}
            {{ form_row(registrationForm.roles, {
                label: 'Rôle'
            }) }}
            {{ form_row(registrationForm.agreeTerms, {
                label: 'Acceptation des termes'
            }) }}

                <button type="submit" class="btn">Inscrire un utilisateur</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
    <div class="clear"></div>
{% endblock %}
